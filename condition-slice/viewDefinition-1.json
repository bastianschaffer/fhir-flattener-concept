{
  "resourceType": "https://sql-on-fhir.org/ig/StructureDefinition/ViewDefinition",
  "name": "condition-test",
  "status": "draft",
  "resource": "Condition",
  "select": [
    {
      "column": [
        {
          "name": "id",
          "path": "getResourceKey()"
        }
      ]
    },
    {
      "forEach": "code.coding",
      "column": [
        {
          "name": "SCT",
          "path": "where(system = 'http://snomed.info/sct').code"
        },
        {
          "name": "AphaID",
          "path": "where(system = 'http://fhir.de/CodeSystem/bfarm/alpha-id').code"
        },
        {
          "name": "ICD10",
          "path": "where(system = 'http://fhir.de/CodeSystem/bfarm/icd-10-gm').code"
        },
        {
          "name": "OphaNet",
          "path": "where(system = 'http://www.orpha.net').code"
        }
      ]
    }
  ]
}
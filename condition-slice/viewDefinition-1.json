{
  "resourceType": "https://sql-on-fhir.org/ig/StructureDefinition/ViewDefinition",
  "name": "condition-test",
  "status": "draft",
  "resource": "Condition",
  "select": [
    {
      "column": [
        {
          "name": "id",
          "path": "getResourceKey()"
        }
      ]
    },
    {
      "forEach": "code.coding.where(system = 'http://www.orpha.net')",
      "select": [
        {
          "column": [
            {
              "name": "OrphaNet",
              "path": "code"
            }
          ]
        }
      ]
    },
    {
      "forEach": "code.coding.where(system = 'http://fhir.de/CodeSystem/bfarm/alpha-id')",
      "select": [
        {
          "column": [
            {
              "name": "alpha",
              "path": "code"
            }
          ]
        }
      ]
    },
    {
      "forEach": "code.coding.where(system = 'http://fhir.de/CodeSystem/bfarm/icd-10-gm')",
      "select": [
        {
          "column": [
            {
              "name": "icd",
              "path": "code"
            }
          ]
        }
      ]
    },
    {
      "forEach": "code.coding.where(system = 'http://snomed.info/sct')",
      "select": [
        {
          "column": [
            {
              "name": "sct",
              "path": "code"
            }
          ]
        }
      ]
    }
  ]
}
{
  "name": "conds",
  "resource": "Condition",
  "resourceType": "ViewDefinition",
  "select": [
    {
      "column": [
        {
          "name": "id",
          "path": "id"
        }
      ]
    },
    {
      "forEach": "stage.summary.coding",
      "select": [
        {
          "column": [
            {
              "name": "summarySystem",
              "path": "system"
            },
            {
              "name": "summaryCode",
              "path": "code"
            }
          ]
        }
      ]
    },
    {
      "forEach": "stage.type.coding",
      "select": [
        {
          "column": [
            {
              "name": "typeCode",
              "path": "code"
            },
            {
              "name":"typeSyetem",
              "path": "system"
            }
          ]
        }
      ]
    }
  ]
}
